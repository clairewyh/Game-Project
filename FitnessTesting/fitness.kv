<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        Label:
            text: 'Select Round'
            halign: 'center'
            font_size: '20sp'
        Button:
            text: 'Round 1'
            on_release: app.on_round_click(1)
        Button:
            text: 'Round 2'
            on_release: app.on_round_click(2)
        Button:
            text: 'Round 3'
            on_release: app.on_round_click(3)
        Button:
            text: 'Round 4'
            on_release: app.on_round_click(4)
        Button:
            text: 'Round 5'
            on_release: app.on_round_click(5)

<ExerciseScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'

        ScrollView:
            GridLayout:
                id: exercise_inputs
                cols: 3
                spacing: '10dp'
                padding: ('10dp', '10dp', '10dp', '20dp')  # Add bottom padding
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'
                row_force_default: True
                col_default_width: '200dp'  # Set a default width for label column
        
        Button:
            text: 'Save Changes'
            on_release: root.save_data()
            size_hint_y: None
            height: "48dp"
        
        Button:
            text: "Back"
            on_release: app.root.current = "home"  # Navigate back to home screen
            size_hint_y: None
            height: "48dp"
            size_hint: None, None
            size: "100dp", "48dp"
            pos_hint: {"x": 0, "top": 1}  # Position in the top-left corner

<ExerciseLabel>:
    Label:
        text: root.text
        halign: 'center'
        font_size: '16sp'
        size_hint_x: None
        width: self.texture_size[0] + dp(16)  # Set width based on text size with some padding

<ExerciseInput>:
    TextInput:
        hint_text: root.hint_text
        multiline: False
        font_size: '16sp'
        size_hint_x: 0.3
        padding: '10dp'


<ExerciseLabel>:
    Label:
        text: root.text
        halign: 'center'
        font_size: '16sp'

<ExerciseInput>:
    TextInput:
        hint_text: root.hint_text
        multiline: False
        font_size: '16sp'
