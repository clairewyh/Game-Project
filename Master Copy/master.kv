<Homepage>:
    orientation: 'vertical'
    spacing:'1.338cm'
    padding:'2.04cm'
    BoxLayout:
        orientation:'vertical'
        size_hint_y: None
        height:'4.169cm'
        Image:        
            source:"appicon.png" 
            size_hint_y: None
            height:"5cm"

        Label:
            markup: True
            text:'Jumparoo'
            font_size: '1.05833cm'
   
    Button:
        text: "Teacher"
        height:'1.50cm'
        font_size:'0.635cm'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding : self.height/2 - self.font_size/2
        background_color: 0, 0.5, 1, 0.8
        background_normal: ''
        on_release: app.on_teacher_pressed()

    Button:
        text: "Student"
        height:'1.549cm'
        font_size:'0.635cm'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding : self.height/2 - self.font_size/2
        background_color: 0, 0.5, 1, 0.8
        background_normal: ''
        on_release: app.on_student_pressed()

<LoginPage>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.2
        Label:
            markup: True
            text: 'Welcome to the Login Page'
            font_size: '0.7cm'

    Label:
        text: 'Username:'
        size_hint_y: 0.1
    TextInput:
        multiline: False
        size_hint_y: 0.1
        id: username_input

    Label:
        text: 'Password:'
        size_hint_y: 0.1
    TextInput:
        multiline: False
        password: True
        size_hint_y: 0.1 
        id: password_input

    Button:
        text: 'Login'
        size_hint_y: 0.1
        background_color: 0.2, 0.8, 1, 1
        background_normal: ''
        on_press: root.login()

<TeacherClass>:
    orientation: "vertical"
    padding: "10dp"
    
  

    Button:
        id: plus_button 
        size_hint: None, None
        size: "108dp", "90dp"
        pos_hint: {"right": 1, "top": 1}
        background_normal: "plus.png"
        background_down: "plusPressed.png"
        on_release: root.open_popup()
        

    Label:
        text: "Classes"
        font_size: 70
        height: "50dp"
        padding: "10dp"
        pos_hint: {"left": 1, "top": 1}
        bold: True

    ScrollView:
        size_hint_y: None
        height: "400dp"
        
        BoxLayout:
            id: classes_layout
            orientation: "vertical"
            size_hint_y: None
            spacing: "10dp"

<ClassButton@Button>:
    size_hint_y: None
    height: "80dp"
    background_color: 0, 1, 0.827, 1  # Pale green color
    width: "200dp"

<StudentClass>:
    orientation: "vertical"
    padding: "10dp"
    

    Button:
        id: plus_button 
        size_hint: None, None
        size: "108dp", "90dp"
        pos_hint: {"right": 1, "top": 1}
        background_normal: "plus.png"
        background_down: "plusPressed.png"
        on_release: root.open_popup()
        

    Label:
        text: "Classes"
        font_size: 70
        height: "50dp"
        padding: "10dp"
        pos_hint: {"left": 1, "top": 1}
        bold: True

    ScrollView:
        size_hint_y: None
        height: "400dp"
        
        BoxLayout:
            id: classes_layout
            orientation: "vertical"
            size_hint_y: None
            spacing: "10dp"

<ClassButton@Button>:
    size_hint_y: None
    height: "80dp"
    background_color: 0, 1, 0.827, 1  # Pale green color
    width: "200dp"

<ClassList>:
    orientation: "vertical"
    padding: "10dp"
   
    Label:
        text: "Class List"
        font_size: 70
        height: "50dp"
        padding: "10dp"
        pos_hint: {"left": 1, "top": 1}
        bold: True

    ScrollView:
        size_hint_y: None
        height: "400dp"
        
        BoxLayout:
            id: students_layout
            orientation: "vertical"
            size_hint_y: None
            spacing: "10dp"

    Button:
        text: "Back"
        size_hint: None, None
        size: "108dp", "90dp"
        pos_hint: {"right": 1, "bottom": 1}
        on_release: root.back_to_teacher_class()

<StudentHomepage>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.2
        Label:
            markup: True
            text:'[b]Class Name[/b]'
            font_size: '1cm'
    
    Button:
        text: 'Set some goals for yourself!'
        size_hint_y: 0.1
        background_color: 0, 0.5, 1, 0.8
        background_normal: ''
        bold: True
    
    Label:
        text: 'Goal 1:'
        size_hint_y: 0.1
        bold: True
    TextInput:
        multiline: False
        size_hint_y: 0.1
        id: first_goal

    Label:
        text: 'Goal 2:'
        size_hint_y: 0.1
        bold: True
    TextInput:
        multiline: False
        size_hint_y: 0.1
        id: second_goal
    
    Label:
        text: 'Goal 3:'
        size_hint_y: 0.1
        bold: True
    TextInput:
        multiline: False
        size_hint_y: 0.1
        id: third_goal

    Button: 
        text: 'Click here to save goals' 
        size_hint_y: 0.2
        background_color: 0.2, 0.8, 1, 1
        background_normal: ''
        bold: True
        on_press: root.goal_setting()

    Button:
        text: 'Click here to go to the Fitness Testing Page'
        size_hint_y: 0.3
        background_color: 0, 0.5, 1, 0.8
        background_normal: ''
        bold: True 
